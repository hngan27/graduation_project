extends ../layout

block content
  .bg-gray-100.min-h-screen.py-12
    .container.mx-auto.px-4
      .max-w-3xl.mx-auto.bg-white.shadow-lg.rounded-lg.overflow-hidden
        .bg-cover.bg-center.h-40(
          style='background-image: url("/images/profile-cover.jpg")'
        )
        .flex.justify-center.-mt-16
          img.w-32.h-32.rounded-full.border-4.border-white.object-cover(
            src=user.avatar_url || '/images/student.png',
            alt='Avatar'
          )
        .text-center.px-6.py-4
          h2.text-3xl.font-semibold.text-gray-800= user.name
          p.mt-2.text-gray-600
            | #{ t('profile.email') }:&nbsp;
            strong.text-gray-800= user.email
          p.mt-2.text-gray-600
            | #{ t('profile.phone') }:&nbsp;
            strong.text-gray-800= user.phone || t('profile.not_available')
          p.mt-2.text-gray-600
            | #{ t('profile.about') }:&nbsp;
            strong.text-gray-800= user.about || t('profile.not_available')
          p.mt-2.text-gray-600
            | #{ t('profile.birthday') }:&nbsp;
            strong.text-gray-800= user.birthday ? new Date(user.birthday).toLocaleDateString('en-GB') : t('profile.not_available')
          p.mt-2.text-gray-600
            | #{ t('user.detail.major') }:&nbsp;
            strong.text-gray-800 #{ user.specialization ? user.specialization : 'N/A' }
        .px-6.py-4
          a.inline-block.w-full.px-6.py-3.bg-blue-500.text-white.font-semibold.rounded-lg.shadow-md.transition-colors.duration-300.text-center(
            href='/profile/update',
            class='hover:bg-blue-600'
          ) #{ t('profile.update_button') }
