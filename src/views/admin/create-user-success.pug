extends index

block content
  div(class="flex flex-col items-center justify-center min-h-[60vh] text-center")
    // Biểu tượng tích xanh
    .bg-green-100.rounded-full.p-6.mb-6
      svg(xmlns='http://www.w3.org/2000/svg', class='h-16 w-16 text-green-600', fill='none', viewBox='0 0 24 24', stroke='currentColor')
        path(stroke-linecap='round', stroke-linejoin='round', stroke-width='2', d='M5 13l4 4L19 7')

    h2.text-2xl.font-bold.text-green-700.mb-4= title
    p.text-gray-700.text-lg.mb-8= message

    a(
      href='/admin/users/create',
      class='inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium px-6 py-3 rounded-lg transition duration-300'
    )= t('admin.create_user.back_to_form')
