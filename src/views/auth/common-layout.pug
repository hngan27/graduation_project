doctype html
html
  head
    title= t('login.title')
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/global.css')
    link(
      rel='stylesheet',
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css'
    )

  body
    nav.relative.bg-white.border-gray-200.mb-4.z-10(class='dark:bg-gray-900')
      .max-w-screen-xl.flex.flex-wrap.items-center.justify-between.mx-auto.p-4
        a.flex.items-center.space-x-3(href='/', class='rtl:space-x-reverse')
          img.h-8(src='/favicon.ico', alt='SmartEdu Logo')
          span.self-center.text-2xl.font-semibold.whitespace-nowrap(
            class='dark:text-white'
          )
            | SmartEdu
          .border-l.border-gray-300.h-5
          span.text-lg.font-medium(class='dark:text-white')
            | #{ t('login.title') }

        // Language Selector
        .ml-auto.flex.items-center.space-x-6
          a.flex.items-center(href='?lng=en')
            img.flag.w-6.h-4.mr-4(
              src='/images/eng-flag.png',
              alt='English Flag'
            )
            | #{ t('english') }
          .border-l.border-gray-300.h-4
          a.flex.items-center(href='?lng=vi')
            img.flag.w-6.h-4.mr-4(
              src='/images/vietnam-flag.png',
              alt='Vietnamese Flag'
            )
            | #{ t('vietnamese') }

    block content
